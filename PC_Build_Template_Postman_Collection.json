{
	"info": {
		"_postman_id": "pc-build-template-tests",
		"name": "PC Build Template API Tests",
		"description": "Collection for testing PC Build Template functionality",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:4000"
		},
		{
			"key": "authToken",
			"value": ""
		}
	],
	"item": [
		{
			"name": "1. Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/health",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"health"
					]
				}
			}
		},
		{
			"name": "2. Test Endpoint",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/test",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"test"
					]
				}
			}
		},
		{
			"name": "3. PC Build Template Diagnostic",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/pc-build-templates-test",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"pc-build-templates-test"
					]
				}
			}
		},
		{
			"name": "4. Get All PC Build Templates",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{authToken}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/pc-build-templates",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"pc-build-templates"
					]
				}
			}
		},
		{
			"name": "5. Get Categories",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/categories",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"categories"
					]
				}
			}
		},
		{
			"name": "6. Get Items",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/items",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"items"
					]
				}
			}
		},
		{
			"name": "7. Login (Get Auth Token)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/accounts/authenticate",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"accounts",
						"authenticate"
					]
				}
			}
		}
	]
}
